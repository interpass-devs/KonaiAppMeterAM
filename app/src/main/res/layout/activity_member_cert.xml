<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_background"
    android:padding="16dp"
    android:weightSum="12">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="20dp">
        <com.konai.appmeter.driver_am.util.FontFitTextView
            android:visibility="visible"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:text="운전자"
            android:textSize="30dp"
            android:textColor="#F6BE16"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:background="@drawable/yellow_gradi_btn"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">
                <TextView
                    android:id="@+id/check_driver_info"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="변경/추가"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:weightSum="15">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:background="@drawable/yellow_line_black_background"
            android:layout_weight="2">
            <LinearLayout
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.konai.appmeter.driver_am.util.FontFitTextView
                    android:id="@+id/driver_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="홍길동"
                    android:textColor="@color/grey_light"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <com.konai.appmeter.driver_am.util.FontFitTextView
                    android:id="@+id/driver_num"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:text="1234"
                    android:textColor="@color/grey_light"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

        </LinearLayout>

        <!-- 이름 -->
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="3.5"
            android:orientation="vertical">
            <com.konai.appmeter.driver_am.util.FontFitTextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:gravity="bottom"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="이름"
                android:textColor="@color/grey_light"/>
            <!--  android:background="@drawable/layout_edit_round_radius" -->
            <EditText
                android:id="@+id/inpt_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2.2"
                android:autoSizeTextType="uniform"
                android:background="@drawable/grey_round_background"
                android:paddingLeft="10dp"
                android:clickable="false"
                android:enabled="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="성함을 입력해주세요"
                android:textColorHint="@color/grey_light"
                android:maxLength="4"
                android:inputType="text"
                android:textColor="@color/white"
                android:textStyle="bold"
                />
        </LinearLayout>

        <!-- 차량번호 -->
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:weightSum="3.5">
            <com.konai.appmeter.driver_am.util.FontFitTextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:gravity="bottom"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/grey_light"
                android:text="차량번호"/>

            <EditText
                android:id="@+id/inpt_carno"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2.2"
                android:autoSizeTextType="uniform"
                android:background="@drawable/grey_round_background"
                android:paddingLeft="10dp"
                android:hint="차량번호를 입력해주세요"
                android:textColorHint="@color/grey_light"
                android:maxLength="9"
                android:textColor="#ffffff"
                android:textStyle="bold" />
        </LinearLayout>



        <!-- 확인버튼 -->
        <LinearLayout
            android:layout_weight="6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:weightSum="6">
            <com.konai.appmeter.driver_am.util.FontFitTextView
                android:id="@+id/tv_conn_status"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:text="통신결과"
                android:padding="8dp"/>

            <com.konai.appmeter.driver_am.util.ButtonFitText
                android:id="@+id/btn_ok"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="확 인"
                android:textStyle="bold"
                android:padding="10dp"
                android:background="@drawable/yellow_gradi_btn"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:id="@+id/auto_login_checkbox_layout"
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="right"
                android:layout_gravity="right"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">
                <CheckBox
                    android:id="@+id/auto_login_checkbox"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="자동 로그인"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>






        <!-- 등록번호 -->
        <LinearLayout
            android:visibility="gone"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:autoSizeTextType="uniform"
                android:textStyle="bold"
                android:text="등록번호"
                android:layout_marginTop="30dp"/>

            <EditText
                android:id="@+id/inpt_certino"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:layout_weight="2.2"
                android:autoSizeTextType="uniform"
                android:background="#141425"
                android:hint="기사등록번호를 입력해주세요"
                android:paddingLeft="10dp"
                android:textColor="#ffffff" />
        </LinearLayout>







    </LinearLayout>


</LinearLayout>