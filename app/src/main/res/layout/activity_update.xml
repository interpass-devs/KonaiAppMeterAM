<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".view.UpdateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical"
        android:layout_margin="50dp"
        android:background="@color/white"
        android:padding="20dp">
        <TextView
            android:layout_weight="1"
            android:id="@+id/updateText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center|top"
            android:text="업데이트 건이 있습니다.\n아아아아"
            android:textColor="@color/black"
            android:textSize="25dp"/>
        <TextView
            android:id="@+id/appVersion"
            android:layout_weight="0.3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="right"
            android:text="다운로드 크기: 11 MB/   앱버전: 0.2"
            android:textColor="@color/grey_light"
            android:textSize="15dp"
            android:layout_marginRight="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <com.konai.appmeter.driver_am.util.ButtonFitText
                android:layout_weight="1"
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:background="#148A7F"/>
            <com.konai.appmeter.driver_am.util.ButtonFitText
                android:id="@+id/downbtn"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="확인"
                android:textColor="@color/white"
                android:background="@drawable/green_btn"
                android:padding="10dp"/>
        </LinearLayout>

    </LinearLayout>


<!--    <com.konai.appmeter.driver_am.util.FontFitTextView-->
<!--        android:id="@+id/updateText"-->
<!--        android:layout_width="fill_parent"-->
<!--        android:layout_height="100dp"-->
<!--        android:gravity="center"-->
<!--        android:text="업데이트 Y or N"-->
<!--        android:textColor="@color/yellow"/>-->
    <ProgressBar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/Loading"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_gravity="center"
        android:visibility="gone"/>
<!--    <com.konai.appmeter.driver_am.util.ButtonFitText-->
<!--        android:layout_width="fill_parent"-->
<!--        android:layout_height="70dp"-->
<!--        android:text="다운로드"-->
<!--        android:id="@+id/downbtn"-->
<!--        android:layout_margin="30dp"-->
<!--        android:background="@drawable/yellow_gradi_btn"/>-->


    <com.konai.appmeter.driver_am.util.ButtonFitText
        android:id="@+id/moveToMainActivity"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="메인"
        android:background="@drawable/yellow_gradi_btn"/>

</LinearLayout>