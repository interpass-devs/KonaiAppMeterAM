<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/number_pad_layout"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/btn_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|center_vertical"
                android:background="@drawable/grey_gradi_btn"
                android:button="@null"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="50dp"
                android:textStyle="bold"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"/>

            <RadioButton
                android:id="@+id/btn_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/grey_gradi_btn"
                android:button="@null"
                android:text="2"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="50dp"
                android:textStyle="bold"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"/>

            <RadioButton
                android:id="@+id/btn_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/grey_gradi_btn"
                android:button="@null"
                android:text="3"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="50dp"
                android:textStyle="bold"
                android:layout_marginBottom="1dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/btn_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/grey_gradi_btn"
                android:button="@null"
                android:text="4"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="50dp"
                android:textStyle="bold"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"/>

            <RadioButton
                android:id="@+id/btn_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/grey_gradi_btn"
                android:button="@null"
                android:text="5"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="50dp"
                android:textStyle="bold"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"/>

            <RadioButton
                android:id="@+id/btn_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/grey_gradi_btn"
                android:button="@null"
                android:text="6"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="50dp"
                android:textStyle="bold"
                android:layout_marginBottom="1dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/btn_7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/grey_gradi_btn"
                android:button="@null"
                android:text="7"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="50dp"
                android:textStyle="bold"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"/>
            <RadioButton
                android:id="@+id/btn_8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/grey_gradi_btn"
                android:button="@null"
                android:text="8"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="50dp"
                android:textStyle="bold"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"/>

            <RadioButton
                android:id="@+id/btn_9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/grey_gradi_btn"
                android:button="@null"
                android:text="9"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="50dp"
                android:textStyle="bold"
                android:layout_marginBottom="1dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/btn_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/grey_gradi_btn"
                android:button="@null"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="50dp"
                android:textStyle="bold"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"/>
            <RadioButton
                android:id="@+id/btn_clear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/grey_gradi_btn"
                android:button="@null"
                android:text="정정"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="45dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/btn_close"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/grey_gradi_btn"
                android:button="@null"
                android:text="닫기"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="50dp"
                android:textStyle="bold"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"/>
            <RadioButton
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/grey_gradi_btn"
                android:button="@null"
                android:text="확인"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="45dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>