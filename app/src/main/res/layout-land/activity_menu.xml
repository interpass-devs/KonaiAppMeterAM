<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:orientation="vertical"
    android:clickable="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/yellow">
            <TextView
                android:id="@+id/menu_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"

                android:text="메뉴"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:layout_marginTop="3dp"/>
            <Button
                android:visibility="gone"
                android:id="@+id/menu_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="업데이트" />

            <Button
                android:id="@+id/menu_btnclose"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="x"
                android:background="@color/pink" />
            <!-- android:background="@drawable/nbtn_exit" -->
        </RelativeLayout>





        <LinearLayout
            android:layout_weight="1"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/black">


            <LinearLayout
                android:layout_weight="1"
                android:weightSum="6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <!-- 정보 -->
                <LinearLayout
                    android:id="@+id/menu_info"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_weight="0.4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_location_btn"
                        android:tint="@color/yellow"
                        tools:ignore="UseAppTint" />
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="정보"
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/yellow"/>


                <!-- 거래내역 -->
                <LinearLayout
                    android:id="@+id/menu_drvhistory"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_weight="0.4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_location_btn"
                        android:tint="@color/yellow"
                        tools:ignore="UseAppTint" />
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="거래집계"
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/yellow"/>


                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/menu_submenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/menu_todayrecord"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="당일 거래 내역"
                        android:textColor="#818288"
                        android:textSize="25dp"
                        android:padding="8dp"/>
                    <TextView
                        android:id="@+id/menu_yestrecord"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="통합 운행 정보"
                        android:textColor="#818288"
                        android:textSize="25dp"
                        android:padding="8dp"/>
                    <TextView
                        android:id="@+id/menu_allrecord"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="거래 내역 조회"
                        android:textColor="#818288"
                        android:textSize="25dp"
                        android:padding="8dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/yellow"/>
                </LinearLayout>



                <!-- 영수증 출력 -->
                <LinearLayout
                    android:id="@+id/menu_getreceipt"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:src="@drawable/ic_location_btn"
                        android:tint="@color/yellow"
                        tools:ignore="UseAppTint"  />
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="영수증 출력"
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/yellow"/>

                <!-- 현금 영수증 출력 -->
                <LinearLayout
                    android:id="@+id/menu_cashreceipt"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:src="@drawable/ic_location_btn"
                        android:tint="@color/yellow"
                        tools:ignore="UseAppTint" />
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="현금 영수증"
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/yellow"/>



                <!-- 수기결제 -->
                <LinearLayout
                    android:id="@+id/menu_menualpay"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_weight="0.4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_location_btn"
                        android:tint="@color/yellow"
                        tools:ignore="UseAppTint" />
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="수기결제"
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/yellow"
                    android:layout_marginBottom="10dp"/>



                <!-- 결제취소 -->
                <LinearLayout
                    android:id="@+id/menu_cancelpay"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_weight="0.4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_location_btn"
                        android:tint="@color/yellow"
                        tools:ignore="UseAppTint"/>
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="카드결제취소"
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        android:textStyle="bold"/>
                </LinearLayout>



            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000000"/>




            <ScrollView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
                <LinearLayout
                    android:weightSum="7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- 기기설정 -->
                    <LinearLayout
                        android:id="@+id/menu_setting"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_weight="0.4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_location_btn"
                            android:tint="@color/yellow"
                            tools:ignore="UseAppTint"/>
                        <TextView
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:text="빈차등메뉴"
                            android:textColor="@color/white"
                            android:textSize="25dp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/yellow"/>



                    <!-- 설정상태 -->
                    <LinearLayout
                        android:id="@+id/menu_env_setting"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_weight="0.4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_location_btn"
                            android:tint="@color/yellow"
                            tools:ignore="UseAppTint"/>
                        <TextView
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:text="환경설정"
                            android:textColor="@color/white"
                            android:textSize="25dp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/submenu_env_setting"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <LinearLayout
                            android:visibility="gone"
                            android:layout_weight="1"
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="horizontal"
                            android:layout_marginBottom="5dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:layout_weight="1"
                                android:textSize="20dp"
                                android:text="모뎀"
                                android:paddingLeft="5dp"
                                android:layout_marginLeft="10dp"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:textSize="20dp"
                                android:text="OFF"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/menu_bluetooth_layout"
                            android:layout_weight="1"
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="horizontal"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp">
                            <TextView
                                android:id="@+id/menu_ble"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:layout_weight="1"

                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:text="블루투스"
                                android:paddingLeft="5dp"
                                android:layout_marginLeft="10dp"/>
                            <TextView
                                android:id="@+id/menu_ble_status"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:layout_weight="1"

                                android:textSize="20dp"
                                android:text="OFF"/>
                        </LinearLayout>
                        <!--                        <View-->
                        <!--                            android:layout_width="match_parent"-->
                        <!--                            android:layout_height="1dp"-->
                        <!--                            android:background="@color/light_grey"/>-->


                        <LinearLayout
                            android:id="@+id/menu_orientation_layout"
                            android:layout_weight="1"
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/menu_ori"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"

                                android:textSize="20dp"
                                android:text="가로"
                                android:textColor="@color/white"
                                android:paddingLeft="5dp"
                                android:layout_marginLeft="10dp"/>
                            <TextView
                                android:id="@+id/menu_ori_status"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:layout_weight="1"

                                android:textSize="20dp"
                                android:text="OFF"/>
                        </LinearLayout>



                        <LinearLayout
                            android:id="@+id/menu_gubun_layout"
                            android:layout_weight="1"
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/menu_gubun"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"

                                android:textSize="20dp"
                                android:text="개인"
                                android:textColor="@color/white"
                                android:paddingLeft="5dp"
                                android:layout_marginLeft="10dp"/>
                            <TextView
                                android:id="@+id/menu_gubun_status"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:layout_weight="1"

                                android:textSize="20dp"
                                android:text="OFF"/>
                        </LinearLayout>


                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/menu_auto_login_layout"
                            android:layout_weight="1"
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/menu_auto_login"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:textSize="25dp"
                                android:text="자동로그인"
                                android:paddingLeft="5dp"
                                android:layout_marginLeft="10dp"/>
                            <TextView
                                android:id="@+id/menu_auto_login_status"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:textSize="25dp"
                                android:text="OFF"/>
                        </LinearLayout>
                        <!--                        <View-->
                        <!--                            android:layout_width="match_parent"-->
                        <!--                            android:layout_height="1dp"-->
                        <!--                            android:background="@color/light_grey"/>-->

                        <LinearLayout
                            android:layout_weight="1.5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp">
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"

                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:text="앱 설정변경"
                                android:paddingLeft="5dp"
                                android:layout_marginLeft="10dp"/>
                            <Button
                                android:id="@+id/reset_app_btn"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textSize="25dp"
                                android:textColor="@color/white"

                                android:text="초기화"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="2dp"
                                android:background="@drawable/grey_gradi_btn"
                                android:layout_marginLeft="15dp"/>
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/yellow"
                        android:paddingTop="3dp"/>




                    <!-- 영업 마감 버튼 -->
                    <Button
                        android:id="@+id/menu_enddrv"
                        android:layout_weight="1.5"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"

                        android:text="금일 영업 마감"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/red_gradi_btn"
                        android:layout_marginTop="10dp"
                        android:padding="5dp"/>

                    <!-- 앱종료 버튼 -->
                    <Button
                        android:id="@+id/menu_endapp"
                        android:layout_weight="1.2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"

                        android:text="앱종료"
                        android:textSize="25dp"
                        android:padding="5dp"
                        android:textColor="#ffffff"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/grey_gradi_btn"/>

                    <TextView
                        android:id="@+id/menuversion"
                        android:layout_weight="0.5"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="right"
                        android:text=""
                        android:textSize="10dp"/>



                </LinearLayout>
            </ScrollView>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>